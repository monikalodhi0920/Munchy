<!-- home section start -->
<section class="home" id="home">
    <div class="container">
        <div class="home-slider">
            <div class="wrapper">
                <div class="slide">
                    <div class="content">
                        <span>our special dish</span>
                        <h3>spicy noodles</h3>
                        <p>Delicious spicy noodles packed with flavor and heat.</p>
                        <a href="#" class="btn">Order Now</a>
                    </div>
                    <div class="image">
                        <img src="assets/img/menu/menu-item-3.png" alt="Spicy Noodles">
                    </div>
                </div>

                <div class="slide">
                    <div class="content">
                        <span>our special dish</span>
                        <h3>paneer kabab</h3>
                        <p>Juicy and smoky paneer kababs grilled to perfection.</p>
                        <a href="#" class="btn">Order Now</a>
                    </div>
                    <div class="image">
                        <img src="assets/img/menu/menu-item-1.png" alt="Paneer Kabab">
                    </div>
                </div>

                <div class="slide">
                    <div class="content">
                        <span>our special dish</span>
                        <h3>veg rolls</h3>
                        <p>Crunchy, fresh, and packed with flavors of herbs and veggies.</p>
                        <a href="#" class="btn">Order Now</a>
                    </div>
                    <div class="image">
                        <img src="assets/img/menu/menu-item-2.png" alt="Veg Rolls">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- home section end -->
<!-- menu section start -->
<section class="menu-section" id="dishes">
    <h2>Our Dishes</h2>
    <div class="menu-images">
        <% menuItems.forEach(item => { %>
            <a href="/menu" class="menu-item">
                <img src="<%= item.image %>" alt="<%= item.name %>"><br/><br/><br/>
                <button class="btn">Buy now</button>
            </a>
        <% }) %>
    </div>
</section>
<!-- menu section end -->

<!-- about section start -->
<section class="about-section" id="about">
    <div class="about-content">
        <h2>About Us</h2>
        <p>Welcome to Munchy! We serve delicious, high-quality food made with love. Our passion for taste and freshness brings the best dishes to your table.</p>
        <a href="/about" class="about-btn">Read More</a>
    </div>
</section>


<!-- about section end -->

